        <div class="col s12 pl-3">
          <h5>Notes <a href="#modal_note" class="modal-trigger"><i class="material-icons ">add</i></a></h5>
        </div>
        <div id="notes">

        </div>

        <!-- Exemple document -->
        <div class="col s12 pl-3">
          <h5>Documents <a href="#modal_doc" class="modal-trigger"><i class="material-icons ">add</i></a></h5>
