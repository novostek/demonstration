<div class="row">
  <% contacts.group_by(&:category).map do |category, contatos| %>
      <% contatos.each do |doc| %>
          <div class="col s12 m4">

            <div id="profile-card" class="card" style="overflow: hidden;">
              <div class="card-image waves-effect waves-block waves-light">
                <% if doc.category == :address %>
                  <img class="activator" src="http://maps.google.com/maps/api/staticmap?center=<%= doc.data['lat'] %>,<%= doc.data['lng'] %>&zoom=10&size=800x400&scale=2&maptype=road&markers=color:blue%7Clabel:S%7C<%= doc.data['lat'] %>,<%= doc.data['lng'] %>&key=AIzaSyBUW7c4JukYkKfxTr_bxMN3vn2FvtXAaBQ" alt="">
                <% else %>
                <img class="activator" src="/materialize/images/gallery/28.png" alt="user bg">
                <% end %>
              </div>
              <div class="card-content">
<!--                <img src="../../../app-assets/images/avatar/avatar-7.png" alt="" class="circle responsive-img activator card-profile-image cyan lighten-1 padding-2">-->
                <a class="btn-floating activator btn-move-up waves-effect waves-light red accent-2 z-depth-4 right">
                  <i class="material-icons">filter_list</i>
                </a>
                <h5 class="card-title activator grey-text text-darken-4"><%= doc.category_text %></h5>
                <p><i class="material-icons profile-card-i">perm_identity</i><%= doc.title %></p>

              </div>
              <div class="card-reveal" style=" transform: translateY(-100%);">
               <span class="card-title grey-text text-darken-4"><%= doc.title %> <i class="material-icons right">close</i>
               </span>
                <table class="responsive-table">
                  <tbody>
                  <tr>
                    <td><%= t 'activerecord.attributes.contact.category' %>:</td>
                    <td><%= doc.category_text %></td>
                  </tr>
                  <tr>
                    <td><%= t 'activerecord.attributes.contact.title' %>:</td>
                    <td><%= doc.title %></td>
                  </tr>
                  <% if doc.category.address? %>
                    <tr>
                      <td><%= t 'json_data.address' %>:</td>
                      <td><%= doc.data["address"] %></td>
                    </tr>
                    <tr>
                      <td><%= t 'json_data.city' %>:</td>
                      <td><%= doc.data["city"] %></td>
                    </tr>
                    <tr>
                      <td><%= t 'json_data.state' %>:</td>
                      <td><%= doc.data["state"] %></td>
                    </tr>
                    <tr>
                      <td><%= t 'json_data.zipcode' %>:</td>
                      <td><%= doc.data["zipcode"] %></td>
                    </tr>
                    <tr>
                      <td><%= t 'json_data.lat' %>:</td>
                      <td><%= doc.data["lat"] %></td>
                    </tr>
                    <tr>
                      <td><%= t 'json_data.lng' %>:</td>
                      <td><%= doc.data["lng"] %></td>
                    </tr>
                  <% end %>
                  <% if doc.category.phone? %>
                    <tr>
                      <td><%= t 'json_data.ddd' %>:</td>
                      <td><%= doc.data["ddd"] %></td>
                    </tr>
                    <tr>
                      <td><%= t 'json_data.phone' %>:</td>
                      <td><%= doc.data["phone"] %></td>
                    </tr>
                  <% end %>
                  <% if doc.category.email? %>
                    <tr>
                      <td><%= t 'json_data.email' %>:</td>
                      <td><%= doc.data["email"] %></td>
                    </tr>

                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>






          </div>
      <% end %>

  <% end %>
</div>