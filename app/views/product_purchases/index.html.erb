<div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
			<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
				<!-- Search for small screen-->
				<div class="container">
					<div class="row">
						<div class="col s10 m6 l6">
							<h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.product_purchases') %></span></h5>
							<ol class="breadcrumbs mb-0">
								<li class="breadcrumb-item"><a href="/"><%= t('home') %></a>
								</li>
								<li class="breadcrumb-item"><a href="#"><%= t('activerecord.models.product_purchases') %></a>
								</li>
								<li class="breadcrumb-item active"><%= t('breadcrumb.list') %>
								</li>
							</ol>
						</div>
						<div class="col s2 m6 l6"><a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="<%= new_product_purchase_path %>"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only"><%= t("button.add")  %> <%= t('activerecord.models.product_purchase') %></span></a>
						</div>
					</div>
				</div>
			</div>

<section class="invoice-list-wrapper section">
  <!-- create invoice button-->
  <!-- Options and filter dropdown button-->
  <div class="invoice-filter-action mr-3">
    <div class="row">
    <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <div class="col s9 m11">
          <%= f.search_field :product_cont, placeholder: t('placeholder.search'), class: "search-ransack" %>     
      </div>
      <div class="col s3 m1">
				<button type="submit" class="btn-floating mb-1 waves-effect waves-light rigth">
					<i class="material-icons">search</i>
				</button>
      </div>
    <% end %>
    </div>
  </div>
  <p></p>
  <!-- create invoice button-->
  <div class="responsive-table">
    <style>td{padding: 15px}</style>
    <table class="table invoice-data-table white border-radius-4 pt-1">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.product_purchase.product') %></th>
          <th><%= t('activerecord.attributes.product_purchase.purchase') %></th>
          <th><%= t('activerecord.attributes.product_purchase.unity_value') %></th>
          <th><%= t('activerecord.attributes.product_purchase.quantity') %></th>
          <th><%= t('activerecord.attributes.product_purchase.value') %></th>
          <th><%= t('activerecord.attributes.product_purchase.status') %></th>
          <th><%= t('activerecord.attributes.product_purchase.custom_title') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @product_purchases.each do |product_purchase| %>
        <tr>
            <td><%= product_purchase.product %></td>
            <td><%= product_purchase.purchase %></td>
            <td><%= product_purchase.unity_value %></td>
            <td><%= product_purchase.quantity %></td>
            <td><%= product_purchase.value %></td>
            <td><%= product_purchase.status %></td>
            <td><%= product_purchase.custom_title %></td>
          <td>
            <div class="invoice-action right-align">
              <%= link_to product_purchase, class: "invoice-action-view mr-4" do %>
                <i class="material-icons">remove_red_eye</i>
              <% end %>
              <%= link_to edit_product_purchase_path(product_purchase) , class: "invoice-action-edit mr-4" do %>
                <i class="material-icons">edit</i>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate(@product_purchases)  %>
</section>
