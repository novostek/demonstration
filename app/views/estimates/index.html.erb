<div class="content-wrapper-before woffice-color"></div>
			<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
				<!-- Search for small screen-->
				<div class="container">
					<div class="row">
						<div class="col s10 m6 l6">
							<h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.estimates') %></span></h5>
              <ol class="breadcrumbs mb-0">
                <%= render_breadcrumbs :tag => :li, :separator => "" %>
              </ol>
						</div>
						<div class="col s2 m6 l6"><a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="<%= new_lead_path %>"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only"><%= t("button.add")  %> <%= t('activerecord.models.estimate') %></span></a>
						</div>
					</div>
				</div>
			</div>

<section class="invoice-list-wrapper section">
  <!-- create invoice button-->
  <!-- Options and filter dropdown button-->
  <div class="invoice-filter-action mr-3">
    <div class="row">
    <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <div class="col s9 m11">
          <%= f.search_field :title_or_category_or_code_or_description_or_location_or_status_or_taxpayer_or_title_or_lead_customer_name_cont, placeholder: t('placeholder.search'), class: "search-ransack" %>     
      </div>
      <div class="col s3 m1">
				<button type="submit" class="btn-floating mb-1 waves-effect waves-light rigth">
					<i class="material-icons">search</i>
				</button>
      </div>
    <% end %>
    </div>
  </div>

  <!-- create invoice button-->
  <div class="card">
    <div class="card-content">
      <table class="responsive-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Customer</th>
            <th>Location</th>
            <th>Price</th>
            <th>Status</th>
            <th>Sales person</th>
          </tr>
        </thead>
        <tbody>
          <% @estimates.each do |estimate| %>
            <tr>
              <td>
                <%= link_to estimate.code, view_estimates_path(estimate) %> <br>
                <small><%= estimate.created_at.strftime("%m/%d/%Y") %></small>
              </td>
              <td>
                <%= link_to estimate.customer.name, customer_path(estimate.customer) %> <br>
                <small><%= estimate.customer.get_main_phone_f || "No Phone"%></small>
              </td>
              <td>
                <%= truncate(estimate.location || " ") %> <br>
                <small><%= truncate(estimate.title || " ") %></small>
              </td>
              <td><%= number_to_currency(estimate.total) if can? :see_price, Estimate %></td>
              <td><span class="chip lighten-5 green green-text"><%= estimate.status %></span></td>
              
              <td>
                <% if estimate.worker %>
                  <%= link_to worker_path(estimate.worker) do %>

                  <div class="chip">
                    <% if estimate.worker.photo.present? %>
                      <img src="<%= estimate.worker.photo.url %>" alt="Contact Person">
                    <% end %>
                    <%= estimate.worker.name.strip %>
                  </div></a>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </table>
        </div>
      </div>
  <%= paginate(@estimates)  %>
</section>
