<div class="card-panel">
  <%= form_with url: @redirect, method: :get, local: true do |f| %>
    <% if @estimate.present? %>
      <%= f.hidden_field :estimate, value: @estimate %>
    <% end %>
    <%= f.hidden_field :document, value: @document %>
    <%= f.hidden_field :send_mail, value: @send_mail %>
    <%= f.hidden_field :custom_send, value: true %>
    <%= f.hidden_field :emails, value: @emails %>
    <%= f.hidden_field :from, value: @from %>
    <%= f.hidden_field :customer_sign, value: @customer_sign %>
    <%= f.hidden_field :finish_order, value: @finish_order %>
    <%= f.hidden_field :redirect_to_sign, value: params[:redirect_to_sign] %>

    <%= f.fields_for :customs do |ff| %>
      <% @customs.each do |c| %>
        <div class="row">
          <div class="col s12">
            <div class="input-field">
              <%= ff.label c.to_sym %>
              <%= ff.text_field c.to_sym %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <%= f.submit t('button.send'), class:"btn" %>
  <% end %>
</div>