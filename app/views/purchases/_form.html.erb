<%= form_for(purchase) do |f| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5><%= t('errors.template.header')  %>:</h5>

      <ul>
      <% purchase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">
    <%= f.collection_select :order_id, Order.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">
    <%= f.collection_select :supplier_id, Supplier.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">

    <%= f.label  :value %>
    <%= f.text_field :value %>
    
  </div>

  <div class="input-field">

    <%= f.label  :status %>
    <%= f.text_field :status %>
    
  </div>

  <div class="input-field">

    <%= f.label  :bpm_instance %>
    <%= f.text_field :bpm_instance %>
    
  </div>

</div>
  <div class="actions">
    <%= f.submit t('button.save'), class:"btn" %>
  </div>
<% end %>
