<div class="login-card">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html:{class: "login-form",  method: :post }) do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <h5 class="">Forgot your password?</h5>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix pt-2">person_outline</i>
        <%= f.email_field :email, autocomplete: "email" %>
        <%= f.label :email %>
      </div>
    </div>
    <div class="row">
      <div class="col s12">
        <%= button_tag 'Send me reset password instructions', type: 'submit', class: "btn waves-effect waves-light border-round indigo" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6 m6 l6">
        <p class="medium-small">
          <%= render "devise/shared/links" %>
        </p>
      </div>
      <div class="input-field col s6 m6 l6">

      </div>
    </div>
  <% end %>
</div>


