        <div class="row">
          <div class="col s12 pt-0 pb-0 pl-0 pr-0">
            <table class="striped responsive-table">
              <thead>
              <tr>
                <th style="width: 25%">Estimate</th>
                <th>Est. price</th>
                <th>Order</th>
                <th>Paid</th>
                <th>Receivable</th>
                <th>Overdue</th>
              </tr>
              </thead>
              <tbody>
              <% @customer.estimates.each do |e| %>
                <tr>
                  <td class="display-flex" style="width: 25%">
                    <%= link_to clone_estimate_path(e.id) do %>
                      <i class="material-icons left tooltipped" data-tooltip="Clone estimate">content_copy</i>
                    <% end %>
                    <%= link_to "##{e.code}", e %>
                  </td>
                  <td><%= number_to_currency(e.get_total_value) %></td>
                  <td><%= link_to "##{e.order}", e.order if e.order.present? %></td>
                  <td><%= number_to_currency(e.order.transactions.where(status: :paid).sum(:value) ) if e.order.present?%></td>
                  <td><%= number_to_currency(e.get_total_value - e.order.transactions.where(status: :paid).sum(:value)) if e.order.present? %></td>
                  <td><%= number_to_currency(e.order.transactions.where(status: :pendent).where("due < ?", Date.today).sum(:value) ) if e.order.present?%></td>
                </tr>
              <% end %>
              </tbody>
            </table>
