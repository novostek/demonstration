<div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0">Eschedule Order</h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="index.html">Home</a>
          </li>
          <li class="breadcrumb-item"><a href="#">Order</a>
          </li>
          <li class="breadcrumb-item active">Payment
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <!-- <a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="estimate-add.html"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only">Add estimate</span></a> -->
      </div>
    </div>
  </div>
</div>
<div class="section">
  <%= render 'estimates/estimate_detail' %>
  <div class="card">
    <div class="card-content">
      <ul class="stepper horizontal stepper-head-only">
        <li class="step">
          <div class="step-title waves-effect">Schedule</div>
        </li>
        <li class="step active">
          <div class="step-title waves-effect">Payment</div>
        </li>
        <li class="step">
          <div class="step-title waves-effect">Products purchase</div>
        </li>
      </ul>
      <div class="deposit-list" id="transactions">
        <%= form_for @order, local: true, url: order_path, method: :patch do |form| %>
          <%= form.fields_for :transactions do |transaction_form| %>
            <%= render 'transaction_fields', f: transaction_form %>
          <% end %>
          <div class="row mt-1">
            <%= link_to_add_association form, :transactions, class: "btn btn-add-deposit" do %>
              <i class="material-icons left">add</i> Add payment
            <% end %>
          </div>
      </div>
    </div>
  </div>

  <div class="col s12 pr-0 pl-0 pb-2">
    <a class="btn grey lighten-5 grey-text waves-effect waves-light breadcrumbs-btn left save" href="order-schedule.html"><i class="material-icons left">arrow_back</i> Back</a>
    <%= form.button :submit, class:"btn indigo waves-effect waves-light breadcrumbs-btn right ml-1" do %>
      Next: Products purchase
      <i class="material-icons right">arrow_forward</i>
    <% end %>
  </div>
  <% end %>


</div>

<%= content_for :scripts do %>
  <script>
    $(document).ready(function(){
    $('#transactions').on('cocoon:after-insert', function(e, insertedItem) {
       $('.datepicker').datepicker({
        format: 'yyyy-mm-dd',
        autoClose: true
      });
    });
});
  </script>
<% end %>