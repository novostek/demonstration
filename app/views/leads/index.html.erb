<div class="content-wrapper-before woffice-color"></div>
			<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
				<!-- Search for small screen-->
				<div class="container">
					<div class="row">
						<div class="col s10 m6 l6">
							<h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.leads') %></span></h5>
							<ol class="breadcrumbs mb-0">
                <%= render_breadcrumbs :tag => :li, :separator => "" %>
							</ol>
						</div>
						<div class="col s2 m6 l6"><a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="<%= new_lead_path %>"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only"><%= t("button.add")  %> <%= t('activerecord.models.lead') %></span></a>
						</div>
					</div>
				</div>
			</div>

<section class="invoice-list-wrapper section">
  <!-- create invoice button-->
  <!-- Options and filter dropdown button-->
  <div class="invoice-filter-action mr-3">
    <div class="row">
    <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <div class="col s9 m11">
          <%= f.search_field :phone_or_description_or_status_or_email_or_customer_name_cont, placeholder: t('placeholder.search'), class: "search-ransack" %>     
      </div>
      <div class="col s3 m1">
				<button type="submit" class="btn-floating mb-1 waves-effect waves-light rigth">
					<i class="material-icons">search</i>
				</button>
      </div>
    <% end %>
    </div>
  </div>
  <!-- create invoice button-->
  <div class="card">
    <div class="card-content">
      <style>td{padding: 15px}</style>
      <table class="responsive-table">
        <thead>
          <tr>
            <th>#</th>
            <th><%= t('activerecord.attributes.lead.customer') %></th>
            <th><%= t('activerecord.attributes.lead.date') %></th>
            <th><%= t('activerecord.attributes.leads.description') %></th>
            <th>Estimate</th>
            <th><%= t('activerecord.attributes.lead.status') %></th>
          </tr>
        </thead>
        <tbody>
          <% @leads.each do |lead| %>
            <tr>
              <td>
                <%= link_to lead.code, lead_path(lead) %>
              </td>
              <td>
                <%= lead.customer.name %> <br>
                <small><%= lead.phone %></small>
              </td>
              <td>
                <%= lead.date %> <br>
                <small><%= lead.via %></small>
              </td>
              <td><%=  truncate lead.description || "" %></td>
              <td>
                <% if lead.estimate.present? %>
                  <%= link_to lead.estimate.code, view_estimates_path(lead.estimate) %>
                <% else %>
                   - 
                <% end %>
              </td>
              <td>
                <span class="chip lighten-5 green green-text">
                  <%= lead.status %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate(@leads)  %>
</section>
