<h2><%= t 'button.edit' %> <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t 'texts.devise.currently_waiting_confirmation_for' %>: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t 'texts.devise.leave_blank_if_no_change' %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t 'texts.devise.characters_minimum' %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t 'texts.devise.we_need_current_password_confirm_changes' %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('button.update') %>
  </div>
<% end %>

<h3><%= t 'texts.devise.cancel_my_account' %></h3>

<p><%= t 'texts.devise.unhappy' %> <%= button_to t('texts.devise.cancel_my_account'), registration_path(resource_name), data: { confirm: t('notice.are_you_sure') }, method: :delete %></p>

<%= link_to t('button.back'), :back %>
