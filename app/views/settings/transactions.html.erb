<%= content_for :head_content do %>
  <link href='/css/settings.css' rel='stylesheet' type='text/css' />
<% end %>
<%= form_with url: atualiza_transactions_settings_path, local: true do |f| %>
<section class="invoice-list-wrapper section">
  <%= f.hidden_field  :redirect,  value: "/settings"%>
  <!-- create invoice button-->
  <div class="content-wrapper-before woffice-color"></div>
  <div class="pb-0 pt-4" id="breadcrumbs-wrapper">
    <!-- Search for small screen-->
    <div class="container">
      <div class="row">
        <div class="col s10 m6 l6">
          <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t 'activerecord.models.settings' %></span></h5>
        </div>
      </div>
    </div>
  </div>
  <div class="">
    <div class="settings_container">
      <div class="section">
        <ul class="tabs">
          <li class="tab"><a target="_self" href="/settings"><%= t 'texts.company' %></a></li>
          <li class="tab"><a target="_self" href="/settings/email"><%= t 'texts.emails' %></a></li>
          <li class="tab"><a target="_self" href="/settings/estimate"><%= t 'activerecord.models.estimates' %></a></li>
          <li class="tab"><a target="_self" class="active " href="/settings/transactions"><%= t 'activerecord.models.transactions' %></a></li>
          <li class="tab"><a target="_self" href="/settings/site"><%= t 'texts.settings.site' %></a></li>
        </ul>
        <div class="card">
          <div class="card-content">
            <div class="row mb-3">
              <div class="col s12">
                <div class="card-title black-text">
                  <h5><%= t 'texts.settings.transaction_defaults' %></h5>
                </div>
                <p><%= t 'texts.settings.define_default_values_your_transactions' %></p>
              </div>
            </div>

            <!-- Settings for order payments -->
            <div class="row mb-3">
              <div class="col s12 m6">
                <p class="card-title  black-text"><%= t 'texts.settings.order_payments' %></p>
                <span class="helper-text"><%= t 'texts.settings.select_default_value_receive_order_payment' %>:</span>
              </div>
            </div>
            <div class="container">
              <div class="row">
                <div class="col s12 m3">
                  <p class="card-title  black-text"><%= t 'texts.cash' %></p>
                </div>
                <div class="col s12 m9">
                  <div class="row">
                    <div class="input-field col s12 m6">
                      <%= select_tag :cash_transaction_account, options_from_collection_for_select(@accounts, 'id', 'name', Setting.get_value('cash_transaction_account')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :cash_transaction_account %>
                    </div>
                    <div class="input-field col s12 m6">
                      <%= select_tag :cash_transaction_category, options_from_collection_for_select(@categories, 'id', 'name', Setting.get_value('cash_transaction_category')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :cash_transaction_category %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col s12 m3">
                  <p class="card-title  black-text"><%= t 'texts.settings.square_credit' %></p>
                </div>
                <div class="col s12 m9">
                  <div class="row">
                    <div class="input-field col s12 m6">
                      <%= select_tag :square_credit_transaction_account, options_from_collection_for_select(@accounts, 'id', 'name', Setting.get_value('square_credit_transaction_account')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :square_credit_transaction_account %>
                    </div>
                    <div class="input-field col s12 m6">
                      <%= select_tag :square_credit_transaction_category, options_from_collection_for_select(@categories, 'id', 'name', Setting.get_value('square_credit_transaction_category')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :square_credit_transaction_category %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col s12 m3">
                  <p class="card-title  black-text"><%= t 'texts.settings.square_installments' %></p>
                </div>
                <div class="col s12 m9">
                  <div class="row">
                    <div class="input-field col s12 m6">
                      <%= select_tag :square_installments_transaction_account, options_from_collection_for_select(@accounts, 'id', 'name', Setting.get_value('square_installments_transaction_account')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :square_installments_transaction_account %>
                    </div>
                    <div class="input-field col s12 m6">
                      <%= select_tag :square_installments_transaction_category, options_from_collection_for_select(@categories, 'id', 'name', Setting.get_value('square_installments_transaction_category')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :square_installments_transaction_category %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col s12 m3">
                  <p class="card-title  black-text"><%= t 'texts.check' %></p>
                </div>
                <div class="col s12 m9">
                  <div class="row mb-3">
                    <div class="input-field col s12 m6">
                      <%= select_tag :check_transaction_account, options_from_collection_for_select(@accounts, 'id', 'name', Setting.get_value('check_transaction_account')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :check_transaction_account %>
                    </div>
                    <div class="input-field col s12 m6">
                      <%= select_tag :check_transaction_category, options_from_collection_for_select(@categories, 'id', 'name', Setting.get_value('check_transaction_category')), {prompt: t('texts.select_one')}  %>
                      <%= label_tag  :check_transaction_category %>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
            <hr class="mb-2">
            <!-- Settings for Labor Costs payments -->
            <div class="row mb-3">
              <div class="col s12 m3">
                <p class="card-title  black-text"><%= t('activerecord.models.labor_cost').capitalize %></p>
                <span class="helper-text"><%= t 'texts.settings.select_default_value_pay_labor_costs' %>:</span>
              </div>
              <div class="col s12 m9">
                <div class="row">
                  <div class="input-field col s12 m6">
                    <%= select_tag :labor_cost_transaction_account, options_from_collection_for_select(@accounts, 'id', 'name', Setting.get_value('labor_cost_transaction_account')), {prompt: t('texts.select_one')}  %>
                    <%= label_tag  :labor_cost_transaction_account %>
                  </div>
                  <div class="input-field col s12 m6">
                    <%= select_tag :labor_cost_transaction_category, options_from_collection_for_select(@categories, 'id', 'name', Setting.get_value('labor_cost_transaction_category')), {prompt: t('texts.select_one')}  %>
                    <%= label_tag  :labor_cost_transaction_category %>
                  </div>
                </div>
              </div>
            </div>

            <hr class="mb-2">
            <!-- Settings for Taxes payments -->
            <div class="row mb-3">
              <div class="col s12 m3">
                <p class="card-title  black-text"><%= t 'texts.taxes' %></p>
                <span class="helper-text"><%= t 'texts.settings.select_default_value_pay_taxes' %>:</span>
              </div>
              <div class="col s12 m9">
                <div class="row">
                  <div class="input-field col s12 m6">
                    <%= select_tag :taxes_transaction_account, options_from_collection_for_select(@accounts, 'id', 'name', Setting.get_value('taxes_transaction_account')), {prompt: t('texts.select_one')}  %>
                    <%= label_tag  :taxes_transaction_account %>
                  </div>
                  <div class="input-field col s12 m6">
                    <%= select_tag :taxes_transaction_category, options_from_collection_for_select(@categories, 'id', 'name', Setting.get_value('taxes_transaction_category')), {prompt: t('texts.select_one')}  %>
                    <%= label_tag  :taxes_transaction_category %>
                  </div>
                </div>
              </div>
            </div>
            
            <hr class="mb-2">
            <!-- Settings for Product Purchases -->
            <div class="row mb-3">
              <div class="col s12 m3">
                <p class="card-title  black-text"><%= t 'activerecord.models.product_purchase' %></p>
                <span class="helper-text"><%= t 'texts.settings.select_default_value_buy_product' %>:</span>
              </div>
              <div class="col s12 m9">
                <div class="row">
                  <div class="input-field col s12 m6">
                    <%= select_tag :product_purchase_transaction_account, options_from_collection_for_select(@accounts, 'id', 'name', Setting.get_value('product_purchase_transaction_account')), {prompt: t('texts.select_one')}  %>
                    <%= label_tag  :product_purchase_transaction_account %>
                  </div>
                  <div class="input-field col s12 m6">
                    <%= select_tag :product_purchase_transaction_category, options_from_collection_for_select(@categories, 'id', 'name', Setting.get_value('product_purchase_transaction_category')), {prompt: t('texts.select_one')}  %>
                    <%= label_tag  :product_purchase_transaction_category %>
                  </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
      </div>
      <%= f.submit t('button.save'), class:"btn right" %>
    </div>
    <div class="content-overlay"></div>
  </div>
</section>

<% end %>
