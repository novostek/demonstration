<%= form_for(setting) do |f| %>
  <% if setting.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5><%= t('errors.template.header')  %>:</h5>

      <ul>
      <% setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">

    <%= f.label :namespace %>
    <%= f.text_field :namespace %>
    
  </div>

  <div class="input-field">

    <%= f.label :value %>
    <%= f.text_area :value, value: JSON.pretty_generate(setting.value) %>
    
  </div>

</div>
  <div class="actions">
    <%= f.submit t('button.save'), class:"btn" %>
  </div>
<% end %>
