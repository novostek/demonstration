
<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0">Eschedule estimate</h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="index.html">Home</a>
          </li>
          <li class="breadcrumb-item"><a href="#">Estimates</a>
          </li>
          <li class="breadcrumb-item active">Eschedule
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <!-- <a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="estimate-add.html"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only">Add estimate</span></a> -->
      </div>
    </div>
  </div>
</div>



<div class="col s12">
  <div class="container">
    <div class="section">
      <div class="card-panel">
        <div class="row">
          <div class="col s5">
            <h6><%= @estimate.title %></h6>
            <span><%= @estimate.description %></span>
          </div>
          <div class="col s5">
            <span style="width: 100%" class="left">Customer: <a href="customer-view.html"><%= @estimate.lead.customer.name %></a></span>
            <span style="width: 100%" class="left">Location: <%= @estimate.location %></span>
            <span style="width: 100%" class="left"><%= @estimate.category %></span>
          </div>
          <div class="col s2">
            <span class="chip lighten-5 green green-text right mr-0"><%= @estimate.status %></span>
            <span style="width: 100%" class="right right-align"><%= @estimate.created_at.strftime("%m/%d/%Y") %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-content">
        <ul class="stepper horizontal stepper-head-only">
          <li class="step">
            <div class="step-title waves-effect">Step 1</div>
          </li>
          <li class="step active">
            <div class="step-title waves-effect">Schedule</div>
          </li>
          <li class="step">
            <div class="step-title waves-effect">Measurements</div>
          </li>
          <li class="step">
            <div class="step-title waves-effect">Products</div>
          </li>
        </ul>
        <div class="row">
          <div class="col m3 s12">
            <div id='external-events'>
              <h5>Workers</h5>
              <div class="fc-events-container mb-5">
                <% @workers.each do |worker| %>
                  <div class='fc-event' id="<%= worker.id %>" data-color='<%= @schedules.find_by(worker_id: worker.id, origin_id: @estimate.id).present? ? @schedules.find_by(worker_id: worker.id, origin_id: @estimate.id).color : "##{SecureRandom.hex(3)}" %>'>
                    <% if worker.photo.present? %>
                      <img src="<%= worker.photo %>%" class="circle responsive-img" style="width: 30px;" />
                    <% end %>
                  <%= worker.name %></div>
                <% end %>
                <p>
                  <label>
                    <input type="checkbox" id="drop-remove" />
                    <span>Remove After Drop</span>
                  </label>
                </p>
              </div>
            </div>
          </div>
          <div class="col m9 s12">
            <div id='fc-external-drag'></div>
          </div>
        </div>
      </div>
    </div>
    <div class="col s12 pb-2 pr-0 pl-0">
      <a class="btn grey lighten-5 grey-text waves-effect waves-light breadcrumbs-btn left save" href="estimate-add.html"><i class="material-icons left">arrow_back</i> Back</a>
      
      <%= link_to measurements_estimate_path(id: '2'),
        class: "btn indigo waves-effect waves-light breadcrumbs-btn right ml-1" do %>
        Next: Measurements
      <i class="material-icons right">arrow_forward</i>
    <% end %>

    </div>
  </div>





  

</div>

<%= javascript_tag do %>
  var estimate = <%= raw(@estimate.to_json) %>
  var schedules = <%= raw(@schedules.to_json) %>
<% end %>
<%= content_for :scripts do %>
  <%= javascript_pack_tag 'estimate/schedule', 'data-turbolinks-track': 'reload' %>
<% end %>