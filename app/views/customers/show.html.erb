<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.customer') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a>
          </li>
          <li class="breadcrumb-item"><a href="#"><%= t('activerecord.models.customer') %></a>
          </li>
          <li class="breadcrumb-item active"><%= t('breadcrumb.show') %>
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), customers_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_customer_path(@customer) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">
	
  <p>
    <strong>Name:</strong>
    <%= @customer.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @customer.category %>
  </p>

  <p>
    <strong>Document:</strong>
    <%= @customer.document_id %>
  </p>

  <p>
    <strong>Since:</strong>
    <%= @customer.since %>
  </p>

  <p>
    <strong>Code:</strong>
    <%= @customer.code %>
  </p>

  <p>
    <strong>Birthdate:</strong>
    <%= @customer.birthdate %>
  </p>

  <div class="card">
    <div class="card-content">
      <span class="card-title"><%= t :notes %></span>
      <table>
        <thead>
        <tr>
          <th><%= t "activerecord.attributes.note.title" %></th>
          <th><%= t "activerecord.attributes.note.text" %></th>
        </tr>
        </thead>
        <tbody>
        <% @customer.notes.each do |note| %>
          <tr>
            <td><%= note.title %></td>
            <td><%= note.text %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>

  <div class="card">
    <div class="card-content">
      <span class="card-title"><%= t :documents %></span>
      <table>
        <thead>
        <tr>
          <th><%= t "activerecord.attributes.document_file.title.title" %></th>
          <th><%= t "activerecord.attributes.document_file.file" %></th>
        </tr>
        </thead>
        <tbody>
        <% @customer.document_files.each do |doc| %>
            <tr>
              <td><%= doc.title %></td>
              <td>
                <%= link_to  doc.file.url, target:"_blank" do  %>
                    <i class="material-icons">remove_red_eye</i>
                <% end  if doc.file.present? %>
                    </td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>

