<div class="breadcrumbs-lightpb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.calculation_formula') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <%= render_breadcrumbs :tag => :li, :separator => "" %>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), calculation_formulas_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_calculation_formula_path(@calculation_formula) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">
	
  <p>
    <strong><%= t 'activerecord.attributes.calculation_formula.name' %>:</strong>
    <%= @calculation_formula.name %>
  </p>

  <p>
    <strong><%= t 'activerecord.attributes.calculation_formula.formula' %>:</strong>
    <%= @calculation_formula.formula %>
  </p>

  <p>
    <strong><%= t 'activerecord.attributes.calculation_formula.description' %>:</strong>
    <%= @calculation_formula.description %>
  </p>

  <p>
    <strong><%= t 'activerecord.attributes.calculation_formula.tax' %>:</strong>
    <%= t @calculation_formula.tax %>
  </p>

  <p>
    <strong><%= t 'activerecord.attributes.calculation_formula.namespace' %>:</strong>
    <%= @calculation_formula.namespace %>
  </p>

</div>

