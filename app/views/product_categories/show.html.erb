<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.product_category') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a>
          </li>
          <li class="breadcrumb-item"><a href="#"><%= t('activerecord.models.product_category') %></a>
          </li>
          <li class="breadcrumb-item active"><%= t('breadcrumb.show') %>
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), product_categories_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_product_category_path(@product_category) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">
	
  <p>
    <strong><%= t('activerecord.attributes.product_category.name') %>:</strong>
    <%= @product_category.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.product_category.description') %>:</strong>
    <%= @product_category.description %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.product_category.color') %>:</strong>

    <div class="chip white-text" style="background-color:<%= @product_category.color %>"><%= @product_category.color %></div>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.product_category.namespace') %>:</strong>
    <%= @product_category.namespace %>
  </p>

</div>

