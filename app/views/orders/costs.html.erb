<div class="col s12">
  <div class="container">


    <div class="row">
      <div class="col s12 l9 pl-0 pr-0">

        <div class="col s12 pl-1">
          <div class="card-panel">
            <div class="row">

              <div class="col s12 m5">
                <span class="left width-100"><span class="font-weight-600 black-text">Created at:</span> <%= @order.created_at.strftime("%m/%d/%Y") %></span>
                <span class="left width-100"><span class="font-weight-600 black-text">Location:</span> <%= @order.get_current_estimate.location %></span>
                <span class="left width-100"><span class="font-weight-600 black-text">Category:</span> <%= @order.get_current_estimate.category %></span>
              </div>
              <div class="col s12 m5">
                <span class="left width-100"><span class="font-weight-600 black-text">Price:</span> $ <%= @order.product_purchases.sum(:value).to_f %></span>
                <span class="left width-100"><span class="font-weight-600 black-text">Tax:</span> $ <%= @order.get_current_estimate.tax.to_f %></span>
                <span class="left width-100"><span class="font-weight-600 black-text">Price + Tax:</span>
                      $ <%= @order.product_purchases.sum(:value).to_f + @order.get_current_estimate.tax.to_f %>
                    </span>
              </div>
              <div class="col s12 m2">
                <span class=" users-view-status display-inline chip green lighten-5 green-text right">Current</span>
              </div>

              <div class="col s12 mt-1">
                <span><%= @order.get_current_estimate.description %></span>
              </div>


            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12 l9 pl-0 pr-0">

        <div class="col s12 pl-1">
          <div class="card-panel">
            <div class="row">
              <% @purchases.each do |purchase| %>
                  <div class="card">

                    <div class="card-content">
                      <span class="card-title"><%= purchase.supplier || "No Supplier" %></span>
                      <div class="responsive-table">
                        <style>td{padding: 15px}</style>
                        <table class="table invoice-data-table white border-radius-4 pt-1">
                          <thead>
                          <tr>

                            <th><%= t('activerecord.attributes.product_purchase.product_id') %></th>
                            <th><%= t('activerecord.attributes.product_purchase.quantity') %></th>
                            <th><%= t('activerecord.attributes.product_purchase.unity_value') %></th>
                            <th><%= t('activerecord.attributes.product_purchase.value') %></th>
                            <th><%= t('activerecord.attributes.product_purchase.status')%></th>

                            <th></th>
                          </tr>
                          </thead>
                          <tbody>
                          <% purchase.product_purchases.each do |p| %>
                            <tr>

                              <td><%= p.product || p.custom_title %></td>
                              <td><%= p.quantity %></td>
                              <td><%= p.unity_value %></td>
                              <td><%= p.value %></td>
                              <td><%= p.status_text %></td>

                              <td>
                                <div class="invoice-action right-align">
                                  <%= link_to new_menu_path(pai: p.id), class: "invoice-action-view mr-4" do %>
                                    <i class="material-icons">playlist_add</i>
                                  <% end %>
                                  <%= link_to p, class: "invoice-action-view mr-4" do %>
                                    <i class="material-icons">remove_red_eye</i>
                                  <% end %>
                                  <%= link_to edit_menu_path(p) , class: "invoice-action-edit mr-4" do %>
                                    <i class="material-icons">edit</i>
                                  <% end %>
                                  <%= link_to p, method: :delete,data: { confirm: "#{t :will_delete}" } ,target:"_self", class: "invoice-action-edit mr-4" do %>
                                    <i class="material-icons">delete</i>
                                  <% end %>
                                </div>
                              </td>
                            </tr>
                          <% end %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
