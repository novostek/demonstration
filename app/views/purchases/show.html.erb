<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.purchase') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a>
          </li>
          <li class="breadcrumb-item"><a href="#"><%= t('activerecord.models.purchase') %></a>
          </li>
          <li class="breadcrumb-item active"><%= t('breadcrumb.show') %>
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), purchases_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_purchase_path(@purchase) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">
	
  <p>
    <strong><%= t('activerecord.attributes.purchase.order') %>:</strong>
    <%= @purchase.order %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.purchase.supplier') %>:</strong>
    <%= @purchase.supplier %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.purchase.value') %>:</strong>
    <%= @purchase.value %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.purchase.status') %>:</strong>
    <%= @purchase.status %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.purchase.bpm_instance') %>:</strong>
    <%= @purchase.bpm_instance %>
  </p>

</div>

