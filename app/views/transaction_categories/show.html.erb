<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.transaction_category') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <%= render_breadcrumbs :tag => :li, :separator => "" %>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), transaction_categories_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_transaction_category_path(@transaction_category) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right btn-secondary mr-2 white-text" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">
	
  <p>
    <strong><%= t('activerecord.attributes.transaction_category.name') %>:</strong>
    <%= @transaction_category.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction_category.description') %>:</strong>
    <%= @transaction_category.description %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction_category.color') %>:</strong>
  <div class="chip white-text" style="background-color:<%= @transaction_category.color %>"><%= @transaction_category.color %></div>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction_category.namespace') %>:</strong>
    <%= @transaction_category.namespace %>
  </p>

</div>

