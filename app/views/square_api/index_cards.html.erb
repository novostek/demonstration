<div class="content-wrapper-before woffice-color"></div>
<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0">
          <span><%= t('texts.cards') %> - <%= @customer %></span>
        </h5>
      </div>
      <div class="col s2 m6 l6">
        <a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="<%= nonce_square_api_index_path(customer: @customer, from: 'email') %>"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only"><%= t "button.add" %> <%= t('texts.card') %></span></a>
      </div>
    </div>
  </div>
</div>

<section class="invoice-list-wrapper section">

  <div class="card">
    <div class="card-content">
      <table class="responsive-table">
        <thead>
        <tr>
          <th><%= t 'texts.square_api.card_brand' %></th>
          <th><%= t 'texts.number' %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @cards.each do |card| %>
          <tr>
            <td>
              <%= card[:card_brand] %>
            </td>
            <td>
              <%= "#### #### #### #{card[:last_4]}" %> <br>
            </td>
            <td>
              <%= link_to destroy_card_square_api_index_path(customer: @customer.id, card_id: card[:id]), method: :delete, data: { confirm: 'Are you sure?' }, class: "invoice-action-edit mr-4" do %>
                <i class="material-icons">delete</i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>