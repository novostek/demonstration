<div class="content-wrapper-before woffice-color"></div>
<div class="breadcrumbs-lightpb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.plutus_account') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a>
          </li>
          <li class="breadcrumb-item"><a href="#"><%= t('activerecord.models.plutus_account') %></a>
          </li>
          <li class="breadcrumb-item active"><%= t('breadcrumb.list') %>
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6"><a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="<%= new_account_path %>"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only"><%= t "add"  %> <%= t('activerecord.models.account') %></span></a>
      </div>
    </div>
  </div>
</div>
<section class="invoice-list-wrapper section">
  <!-- create invoice button-->
  <!-- Options and filter dropdown button-->
  <div class="invoice-filter-action mr-3">
    <div class="row">
      <%#= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <!--      <div class="col s9 m11">-->
      <%#= f.search_field :name_cont, placeholder: t('placeholder.search'), class: "search-ransack" %>
      <!--      </div>-->
      <!--      <div class="col s3 m1">-->
      <!--        <button type="submit" class="btn-floating mb-1 waves-effect waves-light rigth">-->
      <!--          <i class="material-icons">search</i>-->
      <!--        </button>-->

      <!--      </div>-->
      <%# end %>
    </div>
  </div>
  <p></p>
  <!-- create invoice button-->
  <div>
    <style>td{padding: 15px}</style>
    <table class="table invoice-data-table white border-radius-4 pt-1 responsive-table">
      <thead>
      <tr>
        <th><%= t('activerecord.attributes.worker.name') %></th>

        <th><%= "Type" %></th>
        <th><%= t('activerecord.attributes.account.transaction_category_id') %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @accounts.each do |account| %>
          <tr>

            <td><%= account.name %></td>

            <td><%= plutus_accounts(account.type) %></td>
            <td><%= TransactionCategory.find(account.transaction_category_id)%></td>
            <td>
              <div class="invoice-action right-align">
                <%#= link_to account, class: "invoice-action-view mr-4" do %>
                    <!--<i class="material-icons">remove_red_eye</i>-->
                <%# end %>
                <%#= link_to edit_account_path(account) , class: "invoice-action-edit mr-4" do %>
                                <!--<i class="material-icons">edit</i>-->
                <%# end %>
                <%#= link_to account, method: :delete,data: { confirm: "#{t :will_delete}" } ,target:"_self", class: "invoice-action-edit mr-4" do %>
                    <!--<i class="material-icons">delete</i>-->
                <%# end %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%#= paginate(@accounts)  %>
</section>
