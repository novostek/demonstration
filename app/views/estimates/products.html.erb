</div>

<div class="row">
  <div class="col s12">
    <div class="container">
      <%= render 'estimate_detail', estimate: @estimate %>
        <div class="card">
          <div class="card-content">
            <ul class="stepper horizontal stepper-head-only">
              <li class="step">
                <div class="step-title waves-effect">Step 1</div>
              </li>
              <li class="step ">
                <div class="step-title waves-effect">Schedule</div>
              </li>
              <li class="step">
                <div class="step-title waves-effect">Measurements</div>
              </li>
              <li class="step active">
                <div class="step-title waves-effect">Products</div>
              </li>
            </ul>

            <%= form_for @measurement_areas do |ma_form| %>
                <div class="row products-area-list pl-1 pr-1" id="measurement_proposals">
                  <%= ma_form.fields_for :measurement_proposals, class: 'product_estimates' do |mp_form| %>
                    <%= render 'measurement_proposal_fields', f: mp_form %>
                    
                  <% end %>
                  <div class="row mt-1">
                    <%= link_to_add_association ma_form, :measurement_proposals, class: 'btn btn-add-area' do %>
                      <i class="material-icons left">add</i> Add area
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            
            <div class="products-suggestions hide">
                <h6 class="suggestions-title">Suggestions</h6>
                <a href="#" data-price="56.9" data-qty="3">Product with a big name</a>
                <a href="#" data-price="23.1" data-qty="1">Product Y</a>
                <a href="#" data-price="23.1" data-qty="1">Product Y2</a>
                <a href="#" data-price="23.1" data-qty="1">Product Y3</a>
                <a href="#" data-price="23.1" data-qty="1">Product Y5</a>
              </div>
            </div>

        </div>
        <div class="col s12 pb-2 pr-0 pl-0" style="position: relative; z-index: -1">
          <a class="btn grey lighten-5 grey-text waves-effect waves-light breadcrumbs-btn left save" href="estimate-measurements.html"><i class="material-icons left">arrow_back</i> Back</a>
          <a class="btn indigo waves-effect waves-light breadcrumbs-btn right ml-1" href="estimate-view.html"><i class="material-icons left">save</i> Save</a>
        </div>
    </div>
  </div>
</div>
<%= content_for :scripts do %>
  <%= javascript_pack_tag 'estimate/products', 'data-turbolinks-track': 'true' %>
<% end %>