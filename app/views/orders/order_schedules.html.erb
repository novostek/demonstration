        <div class="slide-out-right-title">
          <div id="div_title" class="col s8 pl-3">

          </div>
          <div class="col s4 right-align mt-1">
            <div class="row">
              <div class="col s6">
                <a class="btn-floating btn dropdown-settings waves-effect waves-light btn-flat black-text" href="#!" data-target="dropdown_schedule"><i class="material-icons black-text">more_vert</i></a>
                <ul class="dropdown-content" id="dropdown_schedule" tabindex="0" style="">
                  <li tabindex="0">
                    <div class="col s12" id="delete_div">

                    </div>
                    <!--                <a class="grey-text text-darken-2" href="user-profile-page.html"><i class="material-icons">trash</i> Delete schedule<span class="new badge red">2</span></a></li>-->
                  </li>
                  <li tabindex="0">
