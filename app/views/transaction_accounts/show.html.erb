<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.transaction_account') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <%= render_breadcrumbs :tag => :li, :separator => "" %>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), transaction_accounts_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_transaction_account_path(@transaction_account) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">
	
  <p>
    <strong><%= t('activerecord.attributes.transaction_account.name') %>:</strong>
    <%= @transaction_account.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction_account.description') %>:</strong>
    <%= @transaction_account.description %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction_account.color') %>:</strong>
  <div class="chip white-text" style="background-color:<%= @transaction_account.color %>"><%= @transaction_account.color %></div>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction_account.namespace') %>:</strong>
    <%= @transaction_account.namespace %>
  </p>

</div>

