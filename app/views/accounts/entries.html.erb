<div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.entry') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a>
          </li>
          <li class="breadcrumb-item"><a href="#"><%= t('activerecord.models.entry') %></a>
          </li>
          <li class="breadcrumb-item active"><%= t('breadcrumb.list') %>
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6"><a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="<%= new_entry_accounts_path %>"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only"><%= t "add"  %> <%= t('activerecord.models.entry') %></span></a>
      </div>
    </div>
  </div>
</div>
<section class="invoice-list-wrapper section">
  <!-- create invoice button-->
  <!-- Options and filter dropdown button-->
  <div class="invoice-filter-action mr-3">
    <div class="row">
      <%#= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <!--      <div class="col s9 m11">-->
      <%#= f.search_field :name_cont, placeholder: t('placeholder.search'), class: "search-ransack" %>
      <!--      </div>-->
      <!--      <div class="col s3 m1">-->
      <!--        <button type="submit" class="btn-floating mb-1 waves-effect waves-light rigth">-->
      <!--          <i class="material-icons">search</i>-->
      <!--        </button>-->

      <!--      </div>-->
      <%# end %>
    </div>
  </div>
  <p></p>
  <!-- create invoice button-->
  <div class="responsive-table">
    <style>td{padding: 15px}</style>
    <table class="table invoice-data-table white border-radius-4 pt-1">
      <thead>
      <tr>
        <th><%= t('activerecord.attributes.entry.description') %></th>


        <th><%= t('activerecord.attributes.entry.debits') %></th>
        <th><%= t('activerecord.attributes.entry.credits') %></th>
        <th><%= t('activerecord.attributes.entry.date')%></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @entries.each do |entry| %>
        <tr>

          <td><b><%= entry.description %></b></td>

          <td></td>
          <td></td>
          <td><%= entry.date %></td>
          <td>
            <div class="invoice-action right-align">
              <%#= link_to worker, class: "invoice-action-view mr-4" do %>
              <!--                <i class="material-icons">remove_red_eye</i>-->
              <%# end %>
              <%#= link_to edit_worker_path(worker) , class: "invoice-action-edit mr-4" do %>
              <!--                <i class="material-icons">edit</i>-->
              <%# end %>
            </div>
          </td>
        </tr>
        <% entry.debit_amounts.each do |debit_amount| %>
          <tr >
            <td>&nbsp;&nbsp;&nbsp;&nbsp;<%=h "#{debit_amount.account.name}" %></td>
            <td><%=h debit_amount.amount.round(2) %></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
        <% entry.credit_amounts.each do |credit_amount| %>
          <tr >
            <td>&nbsp;&nbsp;&nbsp;&nbsp;<%=h "#{credit_amount.account.name}" %></td>
            <td></td>
            <td><%=h credit_amount.amount.round(2) %></td>
            <td></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
  <%#= paginate(@accounts)  %>
</section>
