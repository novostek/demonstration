<%= form_for(estimate) do |f| %>
  <% if estimate.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5><%= t('errors.template.header')  %>:</h5>

      <ul>
      <% estimate.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">

    <%= f.label  :code %>
    <%= f.text_field :code %>
    
  </div>

  <div class="input-field">

    <%= f.label  :title %>
    <%= f.text_field :title %>
    
  </div>

  <div class="input-field">
    <%= f.collection_select :worker_id, Worker.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">

    <%= f.label  :status %>
    <%= f.text_field :status %>
    
  </div>

  <div class="input-field">

    <%= f.label  :description %>
    <%= f.text_area :description %>
    
  </div>

  <div class="input-field">

    <%= f.label  :location %>
    <%= f.text_field :location %>
    
  </div>

  <div class="input-field">

    <%= f.label  :latitude %>
    <%= f.text_field :latitude %>
    
  </div>

  <div class="input-field">

    <%= f.label  :longitude %>
    <%= f.text_field :longitude %>
    
  </div>

  <div class="input-field">

    <%= f.label  :category %>
    <%= f.text_field :category %>
    
  </div>

  <div class="input-field">
    <%= f.collection_select :order_id, Order.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">

    <%= f.label  :price %>
    <%= f.text_field :price %>
    
  </div>

  <div class="input-field">

    <%= f.label  :tax %>
    <%= f.text_field :tax %>
    
  </div>

  <div class="input-field">

    <%= f.label  :tax_calculation %>
    <%= f.text_field :tax_calculation %>
    
  </div>

  <div class="input-field">
    <%= f.collection_select :lead_id, Lead.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">

    <%= f.label  :bpmn_instance %>
    <%= f.text_field :bpmn_instance %>
    
  </div>

  <div class="input-field">

    <%= f.label  :current %>
    <%= f.check_box :current %>
    
  </div>

  <div class="input-field">

    <%= f.label  :total %>
    <%= f.text_field :total %>
    
  </div>

</div>
  <div class="actions">
    <%= f.submit t('button.save'), class:"btn" %>
  </div>
<% end %>
