<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.user') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <%= render_breadcrumbs :tag => :li, :separator => "" %>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), users_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_user_path(@user) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">


  <p>
    <strong><%= t('activerecord.attributes.user.name') %>:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.user.email') %>:</strong>
    <%= @user.email %>
  </p>
  <p>
    <strong><%= t('profiles') %>:</strong>
    <%= @user.profiles.join(",") %>
  </p>
  <p>
    <strong><%= t('activerecord.attributes.user.active') %>:</strong>
    <%= t @user.active %>
  </p>

  <a class="btn waves-effect waves-light modal-trigger  border-round " href="#modal-mail"><i class="material-icons hide-on-med-and-up ">send</i><span class="hide-on-small-only"><%= t "change_password" %></span></a>




  <div id="modal-mail" class="modal">
    <%= form_with model: @user, local: true do |f| %>
      <div class="modal-content">
        <h4><%= t "change_password" %></h4>
        <div class="row">

          <div class="input-field">
            <%= f.label :password %>
            <%= f.password_field :password %>

          </div>

          <div class="input-field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <%= f.button :submit,  class:"modal-action modal-close waves-effect waves-green btn-flat btn-send", target:"_self" do %>
          <i class="material-icons left">send</i> <%= t 'button.save' %>
        <% end %>
        <!--		<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat btn-send"> <i class="material-icons left">send</i> Send</a>-->
      </div>
    <% end %>
  </div>
	
</div>

