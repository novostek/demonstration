<%= form_for(measurement_area) do |f| %>
  <% if measurement_area.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5><%= t('errors.template.header')  %>:</h5>

      <ul>
      <% measurement_area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">
    <%= f.collection_select :estimate_id, Estimate.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">

    <%= f.label  :name %>
    <%= f.text_field :name %>
    
  </div>

  <div class="input-field">

    <%= f.label  :description %>
    <%= f.text_area :description %>
    
  </div>

</div>
  <div class="actions">
    <%= f.submit t('button.save'), class:"btn" %>
  </div>
<% end %>
