<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5><%= t('errors.template.header')  %>:</h5>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">

    <%= f.label :title %>
    <%= f.text_field :title %>
    
  </div>

  <div class="input-field">

    <%= f.label :text %>
    <%= f.text_area :text %>
    
  </div>

  <div class="input-field">

    <%= f.label :private %>
    <%= f.check_box :private %>
    
  </div>

  <div class="input-field">

    <%= f.label :origin %>
    <%= f.text_field :origin %>
    
  </div>

  <div class="input-field">

    <%= f.label :origin_id %>
    <%= f.number_field :origin_id %>
    
  </div>

</div>
  <div class="actions">
    <%= f.submit t('button.save'), class:"btn" %>
  </div>
<% end %>
