<div class="content-wrapper-before woffice-color"></div>
			<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
				<!-- Search for small screen-->
				<div class="container">
					<div class="row">
						<div class="col s10 m6 l6">
							<h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.transaction_categories') %></span></h5>
              <ol class="breadcrumbs mb-0">
                <%= render_breadcrumbs :tag => :li, :separator => "" %>
              </ol>
						</div>
						<div class="col s2 m6 l6"><a class="btn waves-effect waves-light breadcrumbs-btn right border-round" href="<%= new_transaction_category_path %>"><i class="material-icons hide-on-med-and-up">add</i><span class="hide-on-small-only"><%= t("button.add")  %> <%= t('activerecord.models.transaction_category') %></span></a>
						</div>
					</div>
				</div>
			</div>

<section class="invoice-list-wrapper section">
  <!-- create invoice button-->
  <!-- Options and filter dropdown button-->
  <div class="invoice-filter-action mr-3">
    <div class="row">
    <%= search_form_for @q, url: request.env['PATH_INFO'] do |f|  %>
      <div class="col s9 m11">
          <%= f.search_field :name_cont, placeholder: t('placeholder.search'), class: "search-ransack" %>     
      </div>
      <div class="col s3 m1">
				<button type="submit" class="btn-floating mb-1 waves-effect waves-light rigth">
					<i class="material-icons">search</i>
				</button>
      </div>
    <% end %>
    </div>
  </div>
  <p></p>
  <!-- create invoice button-->
  <div>
    <style>td{padding: 15px}</style>
    <table class="table invoice-data-table white border-radius-4 pt-1 responsive-table">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.transaction_category.name') %></th>
          <th><%= t('activerecord.attributes.transaction_category.description') %></th>
          <th><%= t('activerecord.attributes.transaction_category.color') %></th>
          <th><%= t('activerecord.attributes.transaction_category.namespace') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @transaction_categories.each do |transaction_category| %>
        <tr>
            <td><%= link_to transaction_category.name, transaction_category %></td>
            <td><%= transaction_category.description %></td>
          <td><div class="chip white-text" style="background-color:<%= transaction_category.color %>"><%= transaction_category.color %></div></td>
            <td><%= transaction_category.namespace %></td>
          <td>
            <div class="invoice-action right-align">
              <%= link_to transaction_category, class: "invoice-action-view mr-4" do %>
                <i class="material-icons">remove_red_eye</i>
              <% end %>
              <%= link_to edit_transaction_category_path(transaction_category) , class: "invoice-action-edit mr-4" do %>
                <i class="material-icons">edit</i>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate(@transaction_categories)  %>
</section>
