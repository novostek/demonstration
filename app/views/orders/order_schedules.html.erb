<div class="section">
    <div class="card-panel">
      <div class="row">
        <div class="col s5">
          <h6>Estime title</h6>
          <span style="width: 100%" class="left left-align"><span class="font-weight-600 black-text">Created at:</span> 2020-02-02</span>
          <span>Estimate description that could be a little longer.</span>
        </div>
        <div class="col s5">
          <span style="width: 100%" class="left"><span class="font-weight-600 black-text">Customer:</span> <a href="customer-view.html">John Smith</a></span>
          <span style="width: 100%" class="left"><span class="font-weight-600 black-text">Location:</span> Paris, France</span>
          <span style="width: 100%" class="left"><span class="font-weight-600 black-text">Category:</span> Category 1</span>
        </div>
        <div class="col s2">
          <span class="chip lighten-5 green green-text right mr-0">Status 1</span>
          
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-content">
      <ul class="stepper horizontal stepper-head-only">
        <li class="step active">
          <div class="step-title waves-effect">Schedule</div>
        </li>
        <li class="step">
          <div class="step-title waves-effect">Deposit</div>
        </li>
        <li class="step">
          <div class="step-title waves-effect">Products purchase</div>
        </li>
      </ul>
      <div class="row">
        <div class="col m3 s12">
          <div id='external-events'>
              <h5>Workers</h5>
              <div class="fc-events-container mb-5">
                <% @workers.each do |worker| %>
                  <div class='fc-event' id="<%= worker.id %>" data-color='<%= @schedules.find_by(worker_id: worker.id, origin_id: @order.id).present? ? @schedules.find_by(worker_id: worker.id, origin_id: @order.id).color : "##{SecureRandom.hex(3)}" %>'>
                    <% if worker.photo.present? %>
                      <img src="<%= worker.photo %>" class="circle responsive-img" style="width: 30px;" />
                    <% end %>
                  <%= worker.name %></div>
                <% end %>
                <p>
                  <label>
                    <input type="checkbox" id="drop-remove" />
                    <span>Remove After Drop</span>
                  </label>
                </p>
              </div>
            </div>
        </div>
        <div class="col m9 s12">
          <div id='fc-external-drag'></div>
        </div>
      </div>
    </div>
  </div>
  <div class="col s12 pb-2 pl-0 pr-0">
    <a class="btn grey lighten-5 grey-text waves-effect waves-light breadcrumbs-btn left save" href="estimate-view.html"><i class="material-icons left">arrow_back</i> Back</a>
    <a class="btn waves-effect waves-light indigo breadcrumbs-btn right save-estimate" href="order-deposit.html">Next: Deposit <i class="material-icons right">arrow_forward</i></a>
  </div>
</div>

<%= javascript_tag do %>
  var schedules = <%= raw(@schedules.to_json) %>
  var order = <%= raw(@order.to_json) %>
<% end %>
<%= content_for :scripts do %>
  <%= javascript_pack_tag 'orders/schedule', 'data-turbolinks-track': 'true', 'defer': true %>
<% end %>