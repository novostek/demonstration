<div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.measurement_area') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <li class="breadcrumb-item"><a href="/"><%= t('home') %></a>
          </li>
          <li class="breadcrumb-item"><a href="#"><%= t('activerecord.models.measurement_area') %></a>
          </li>
          <li class="breadcrumb-item active"><%= t('breadcrumb.show') %>
          </li>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), measurement_areas_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_measurement_area_path(@measurement_area) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">
	
  <p>
    <strong><%= t('activerecord.attributes.measurement_area.estimate') %>:</strong>
    <%= @measurement_area.estimate %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.measurement_area.name') %>:</strong>
    <%= @measurement_area.name %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.measurement_area.description') %>:</strong>
    <%= @measurement_area.description %>
  </p>

</div>

