<%= form_for(product_purchase) do |f| %>
  <% if product_purchase.errors.any? %>
    <div id="error_explanation" class="card-panel red white-text">
      <h5><%= t('errors.template.header')  %>:</h5>

      <ul>
      <% product_purchase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="card-panel">
  
  <div class="input-field">
    <%= f.collection_select :product_id, Product.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">
    <%= f.collection_select :purchase_id, Purchase.all, :id, :name, prompt: true  %>
    
  </div>

  <div class="input-field">

    <%= f.label  :unity_value %>
    <%= f.text_field :unity_value %>
    
  </div>

  <div class="input-field">

    <%= f.label  :quantity %>
    <%= f.text_field :quantity %>
    
  </div>

  <div class="input-field">

    <%= f.label  :value %>
    <%= f.text_field :value %>
    
  </div>

  <div class="input-field">

    <%= f.label  :status %>
    <%= f.text_field :status %>
    
  </div>

  <div class="input-field">

    <%= f.label  :custom_title %>
    <%= f.text_field :custom_title %>
    
  </div>

</div>
  <div class="actions">
    <%= f.submit t('button.save'), class:"btn" %>
  </div>
<% end %>
