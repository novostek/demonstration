<div class="breadcrumbs-light pb-0 pt-4" id="breadcrumbs-wrapper">
  <!-- Search for small screen-->
  <div class="container">
    <div class="row">
      <div class="col s10 m6 l6">
        <h5 class="breadcrumbs-title mt-0 mb-0"><span><%= t('activerecord.models.transaction') %></span></h5>
        <ol class="breadcrumbs mb-0">
          <%= render_breadcrumbs :tag => :li, :separator => "" %>
        </ol>
      </div>
      <div class="col s2 m6 l6">
        <%= link_to t('button.all'), transactions_path, class:"btn waves-effect waves-light breadcrumbs-btn right" %>
        <%= link_to edit_transaction_path(@transaction) , class: "btn-flat waves-effect waves-light breadcrumbs-btn right" do %>
          <i class="material-icons">edit</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="card-panel">

  <p>
    <strong><%= t('activerecord.attributes.transaction.title') %>:</strong>
    <%= @transaction.title %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.category') %>:</strong>
    <%= @transaction.category %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.transaction_category') %>:</strong>
  <div class="chip white-text" style="background-color:<%= @transaction.transaction_category.color if @transaction.transaction_category.present? %>"><%= @transaction.transaction_category %></div>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.transaction_account_id') %>:</strong>
  <div class="chip white-text" style="background-color:<%= @transaction.transaction_account.color if @transaction.transaction_account.present? %>"><%= @transaction.transaction_account %></div>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.order_id') %>:</strong>
    <%= @transaction.order %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.origin') %>:</strong>
    <%= @transaction.origin %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.due') %>:</strong>
    <%= @transaction.due %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.effective') %>:</strong>
    <%= @transaction.effective %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.value') %>:</strong>
    <%= @transaction.value %>
  </p>

  <p>
    <strong><%= t('activerecord.attributes.transaction.bpm_instance') %>:</strong>
    <%= @transaction.bpm_instance %>
  </p>

</div>

